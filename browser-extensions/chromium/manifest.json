{
  "manifest_version": 2,
  "name": "Chordials",
  "description": "This extension appends chords to your VK audio lyrics.",
  "version": "1.0",
  "default_locale": "en",
  "author": "Rails to Cosmos Solutions",

  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*",
        "http://vk.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "contextMenus",
    "tabs",
    "https://vk.com/*",
    "http://vk.com/*",
  ]
}
